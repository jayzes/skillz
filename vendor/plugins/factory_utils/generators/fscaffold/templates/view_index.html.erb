<div id="controls"><%%= link_to 'New <%= singular_name %>', new_<%= singular_route_path %>_path %> &rsaquo;</div>
<h1>Listing <%= plural_name %></h1>

<table class="box">
  <tr>
<% for attribute in attributes -%>
    <th><%= attribute.column.human_name %></th>
<% end -%>
    <th>&nbsp;</th>
  </tr>

<%% for <%= singular_name %> in @<%= plural_name %> %>
  <tr>
<% for attribute in attributes -%>
    <td><%%=h <%= singular_name %>.<%= attribute.name %> %></td>
<% end -%>
    <td class="list_controls"><%%= link_to image_tag('icons/edit.png'), edit_<%= singular_route_path %>_path(<%= singular_name %>) %> | 
    <%%= link_to image_tag('icons/delete.png'), <%= url_for_args.gsub('@', '') %>, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<%% end %>
</table>

<%%= will_paginate @<%= plural_name %> %> 


