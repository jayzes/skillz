- content_tag_for :div, @person do
  %ul
    %li
      %strong Name:
      =h @person.name
    %li
      %strong CAS username:
      =h @person.cas_user      
    %li
      %string Skills:
      %ul
        - unless @person.skills.empty?
          - @person.skills.each do |skill|
            %li=h skill.name
        - else
          %li No skills are associated with this person
- content_for :context_navigation do
  %h2= @person.name
  %p= link_to 'Edit this person', edit_person_path(@person)
  %p= link_to 'Delete this person', @person, :confirm => 'Are you sure?', :method => :delete