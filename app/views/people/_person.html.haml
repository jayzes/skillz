- content_tag_for :div, person do
  %ul
    %li
      %strong Name:
      =h person.name
    %li
      %strong Cas user:
      =h person.cas_user
    = link_to 'Show', person
    = link_to 'Edit', edit_person_path(person)
    = link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete